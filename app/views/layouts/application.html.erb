<!DOCTYPE html>
<html>
  <head>
    <title>TTodoApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>

  <body>
    <header class="header" >
      <div class="header_logos">
        <% if !current_page?(root_path) %>
          <%= link_to :back do %>
            <%= image_tag 'back.svg', class: 'header_back' %>
          <% end %>
        <% end %>
        <%= link_to root_path do %>
          <p class="header_pageTitle">Boards</p>
        <% end %>
      </div>
      <% if user_signed_in? %>
        <div class="dropdown">
          <%= image_tag current_user.avatar_image, class: 'header_avatar dropbtn' %>
          <div class="dropdown-content">
            <%= link_to 'プロフィール', profile_path %>
            <%= link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete'} %>
          </div>
        </div> 
      <% else %>
        <%= link_to 'ユーザ登録', new_user_registration_path, class: 'header_loginBtn' %>
        <%= link_to 'ログイン', user_session_path, data: { method: 'post'}, class: 'header_loginBtn' %>
      <% end %>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
