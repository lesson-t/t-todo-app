Tasks Edit
<div class="container">
    <ul>
        <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <%= form_with(model: @task, url: board_task_path(@task.board, @task), local: true) do |f| %>
        <div>
            <%= f.label :eyecatch, 'eyecatch' %>
        </div>
        <div>
            <%= f.file_field :eyecatch %>
        </div>
        <div>
            <%= f.label :title, 'Name' %>
        </div>
        <div>
            <%= f.text_field :title, class: 'text' %>
        </div>
        <div>
            <%= f.label :content, 'Description' %>
        </div>
        <div>
            <%= f.text_area :content, class: 'text' %>
        </div>
        <div>
            <%= f.label :deadline, 'Deadline' %>
        </div>
        <div>
            <%= f.datetime_field :deadline %>
        </div>
        <div>
            <%= f.submit 'Submit', class: 'btn-primary' %>
        </div>
    <% end %>
</div>