<div class="container">
    <ul>
        <% board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
    <%= form_with model: board, local: true do |f| %>
        <div>
            <%= f.label :title, 'Name' %>
        </div>
        <div>
            <%= f.text_field :title %>
        </div>
        <div>
            <%= f.label :content, 'Description' %>
        </div>
        <div>
            <%= f.text_area :content, class: 'text' %>
        </div>
        <div>
            <%= f.submit 'Submit', class: 'btn-primary' %>
        </div>
    <% end %>
</div>